{
  "info": {
    "name": "Test Auth Object Format",
    "_postman_id": "auth-test-123",
    "description": "Test collection with object format authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": {
      "token": "{{apiToken}}"
    }
  },
  "item": [
    {
      "name": "Test Request with Collection Auth",
      "request": {
        "method": "GET",
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/users/{{userId}}"
        },
        "header": []
      }
    },
    {
      "name": "Test Request with Request-Level Auth",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": {
            "token": "{{requestToken}}"
          }
        },
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts/{{postId}}"
        },
        "header": []
      }
    }
  ]
}
